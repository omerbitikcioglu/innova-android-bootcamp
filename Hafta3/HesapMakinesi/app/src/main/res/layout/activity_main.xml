                android:layout_margin="1dp"
                android:layout_weight="2"
                android:drawablePadding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="4"
                android:textSize="20sp"
